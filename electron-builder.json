{
  "$schema": "http://json.schemastore.org/electron-builder",
  "appId": "com.yana.desktopapp",
  "productName": "Yana",
  "copyright": "Copyright (c) 2020 Lukas Bach",
  "files": ["app/**/*", "node_modules/", "index.html"],
  "directories": {
    "output": "./out",
    "buildResources": "./resources"
  },
  "win": {
    "target": ["nsis", "zip"],
    "publish": ["github"]
  },
  "linux": {
    "target": ["snap", "deb", "tar.gz"],
    "publish": ["github"]
  },
  "mac": {
    "target": ["dmg", "zip"],
    "publish": ["github"]
  }
}
